<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_stub"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:visibility="gone" />

    <View
        android:id="@+id/view_stub_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/transparency"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_item_mine_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center_vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_options_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="8dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_item_mine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_f63"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_mine_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:textColor="@color/color_f66"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="2dp"
            android:src="@drawable/icon_next_white" />

    </LinearLayout>
</LinearLayout>