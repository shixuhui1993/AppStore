<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icon_login_bg"
    android:paddingHorizontal="12dp"
    tools:context=".ui.act.UserLoginActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.hjq.shape.view.ShapeView
            android:id="@+id/view_login_type_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="H,338:52"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            app:shape_solidColor="#F5F6F8"
            app:shape_topLeftRadius="12dp"
            app:shape_topRightRadius="12dp" />

        <TextView
            android:id="@+id/tv_login_type_account"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/icon_login_type_account"
            android:gravity="center"
            android:textColor="@color/color_f69"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/view_login_type_bg"
            app:layout_constraintDimensionRatio="H,158:508"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_login_type_bg" />

        <TextView
            android:id="@+id/tv_login_type_mobile"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="短信登录"
            android:textColor="@color/color_f69"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/view_login_type_bg"
            app:layout_constraintDimensionRatio="H,158:508"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_login_type_bg" />


        <com.hjq.shape.view.ShapeView
            android:id="@+id/view_login_info_bg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,338:261"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_login_type_bg"
            app:shape_bottomLeftRadius="12dp"
            app:shape_bottomRightRadius="12dp"
            app:shape_solidColor="@color/white" />

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/et_account"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical|start"
            android:hint="请输入多游账号"
            android:paddingStart="20dp"
            android:text="a5412398"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintDimensionRatio="H,294:50"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_login_type_bg"
            app:layout_constraintWidth_percent="0.86"
            app:shape_radius="30dp"
            app:shape_solidColor="#F5F6F8" />

        <com.hjq.shape.view.ShapeEditText
            android:id="@+id/et_psw"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="36dp"
            android:gravity="center_vertical|start"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingStart="20dp"
            android:text="111111"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintDimensionRatio="H,294:50"
            app:layout_constraintLeft_toLeftOf="@id/et_account"
            app:layout_constraintRight_toRightOf="@id/et_account"
            app:layout_constraintTop_toBottomOf="@id/et_account"
            app:shape_radius="30dp"
            app:shape_solidColor="#F5F6F8" />

        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_code"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="15dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="获取"
            android:textColor="@color/theme_color"
            app:layout_constraintBottom_toBottomOf="@id/et_psw"
            app:layout_constraintDimensionRatio="H,66:26"
            app:layout_constraintRight_toRightOf="@id/et_psw"
            app:layout_constraintTop_toTopOf="@id/et_psw"
            app:layout_constraintWidth_percent="0.2"
            app:shape_radius="20dp"
            app:shape_strokeColor="@color/theme_color"
            app:shape_strokeWidth="1dp" />


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tv_login"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H,286:46"
            app:layout_constraintLeft_toLeftOf="@id/et_account"
            app:layout_constraintRight_toRightOf="@id/et_account"
            app:layout_constraintTop_toBottomOf="@id/et_psw"
            app:shape_radius="30dp"
            app:shape_solidColor="@color/theme_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>